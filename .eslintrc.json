{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended", 
    "plugin:react-hooks/recommended",
    "@unocss"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "react", 
    "react-hooks"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 120,
        "bracketSpacing": true
      }
    ],
    "react/react-in-jsx-scope": "off",
    "@unocss/order": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
